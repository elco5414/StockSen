   <script>
    // JavaScript for sliding effect
    const slidingGraphic = document.querySelector('.sliding-graphic');
    let translateValue = 0;
     function slideGraphic() {
      translateValue -= 100; // Adjust as needed
      slidingGraphic.style.transform = `translateX(${translateValue}%)`;
    }
     // You can call slideGraphic() at intervals using setInterval or trigger it on some user action
    setInterval(slideGraphic, 2000); // Slides every 2 seconds, adjust as needed
  </script>